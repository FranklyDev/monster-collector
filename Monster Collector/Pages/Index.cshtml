@page
@model IndexModel
@{
    ViewData["Title"] = "Monster Collector";
}

<div class="text-center">
    <h1 class="display-4">Monster Collector</h1>
    <p id="message" style="min-height: 25px; color: green;"></p>

    <table class="table monster-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Health</th>
                <th>Attack</th>
                <th>Defense</th>
                <th style="width:200px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var monster in Model.Monsters)
            {
                <tr data-id="@monster.Id" class='hover-tooltip'>
                    <td class='controls' contenteditable="true" title="@monster.Description">@monster.Name</td>
                    <td contenteditable="true">@monster.Health</td>
                    <td contenteditable="true">@monster.Attack</td>
                    <td contenteditable="true">@monster.Defense</td>
                    <td>
                        <button class="saveButton" style="display:none;">Save</button>
                        <button class="deleteButton">Delete</button>
                    </td>
                </tr>
                <tr class="collapse-content d-none">
                    <td colspan="5" class='description'>@monster.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button class="addButton">Add</button>
<input id="prompt" type="text" placeholder="Additional custom prompt" title="Example: A beautiful rainbow monster that is friendly and suitable for children!" />

<!-- Add a modal or tooltip element to your HTML where the audit logs will be displayed -->
<div id="auditLogModal" class="modal">
    <div class="modal-content">
        <span class="close">×</span>
        <h2>Audit Log History</h2>
        <table id="auditLogTable" class="table">
            <thead>
                <tr>
                    <th>Action Type</th>
                    <th>Column Changed</th>
                    <th>Old Value</th>
                    <th>New Value</th>
                    <th>Date Changed</th>
                </tr>
            </thead>
            <tbody>
                <!-- Audit log entries will be populated here -->
            </tbody>
        </table>
    </div>
</div>
